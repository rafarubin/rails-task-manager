<h1>My Tasks</h1>
<div>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task.id) do %>
        <strong>
          <%= task.title %>
        </strong>
        <%= link_to "Delete", task_path(task.id),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

      <% end %>
    </li>

  <% end %>
  </ul>
</div>

<%= link_to '+ Add new task', new_task_path %>
