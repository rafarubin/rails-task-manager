<div>
  <h1> <%= @task.title %>  </h1>
  <%= link_to 'Edit task', edit_task_path %>

  <div class="card w-50 mb-3">
    <div class="card-body bg-info-subtle">
      <%= @task.details %>
    </div>
  </div>

  <div>
    <p>
      <% if @task.completed === true  %>
        <input type="checkbox" id="scales" name="taskcheckbox" checked />
        <%= "Completed" %>
      <% else  %>
        <input type="checkbox" id="scales" name="taskcheckbox" />
        <%= "This task is not completed yet" %>
      <% end %>
    </p>
    <%= link_to "Delete", task_path(@task),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>

  </div>



<%= link_to 'Back to list', tasks_path %>
